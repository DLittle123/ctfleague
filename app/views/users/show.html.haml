- if current_user == @user
  %h1 Your Profile
- else
  %h1 #{@user.email}'s Profile

- if current_user == @user
  %h2 Your Leagues
  - @user.memberships.each do |membership|
    - league = membership.league
    .league
      %h3
        = link_to "#{league.name}", league_path(league.id)
      %p= 'Commissioner: ' + league.commissioner.username
