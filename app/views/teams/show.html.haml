%h1.draft_h1= @team.name
%h2.draft_h2= link_to "#{@league.name}", league_path(@league.id)

%h2 Current Squad
%table
  %thead
    %th Last Name
    %th First Name
    %th Age
    %th Aim
    %th Sight
    %th Stealth
    %th Speed
    %th Hardiness
    %th Leadership
    %th Average
    %th.damage Damage
    %th Remove from Squad
  %tbody
    - @team.tokens.on_squad.each do |token|
      - soldier = token.units.first.soldiers.first
      %tr
        %td= soldier.last_name
        %td= soldier.first_name
        %td= soldier.age
        %td= soldier.aim/100
        %td= soldier.sight/100
        %td= soldier.stealth/100
        %td= soldier.speed/100
        %td= (soldier.effective_hardiness/100).to_s() +" / "+ (soldier.hardiness/100).to_s()
        %td= soldier.leadership/100
        %td= soldier.average
        %td= soldier.damage
        %td
          = simple_form_for([@league, @team, token]) do |f|
            = f.hidden_field :on_squad, :value => false
            = f.button :submit, "Remove", :class => 'table_button'

%h2 Bench
%table
  %thead
    %th Last Name
    %th First Name
    %th Age
    %th Aim
    %th Sight
    %th Stealth
    %th Speed
    %th Hardiness
    %th Leadership
    %th Average
    %th.damage Damage
    %th Add to Squad
  %tbody
    - @team.tokens.off_squad.each do |token|
      - soldier = token.units.first.soldiers.first
      - if !soldier.retired
        %tr
          %td= soldier.last_name
          %td= soldier.first_name
          %td= soldier.age
          %td= soldier.aim/100
          %td= soldier.sight/100
          %td= soldier.stealth/100
          %td= soldier.speed/100
          %td= (soldier.effective_hardiness/100).to_s() +" / "+ (soldier.hardiness/100).to_s()
          %td= soldier.leadership/100
          %td= soldier.average
          %td= soldier.damage
          %td
            = simple_form_for([@league, @team, token]) do |f|
              = f.hidden_field :on_squad, :value => true
              = f.button :submit, "Add", :class => 'table_button'

%h2 Retired
%table
  %thead
    %th Last Name
    %th First Name
    %th Aim
    %th Sight
    %th Stealth
    %th Speed
    %th Hardiness
    %th Leadership
    %th Average
  %tbody
    - @team.tokens.off_squad.each do |token|
      - soldier = token.units.first.soldiers.first
      - if soldier.retired
        %tr
          %td= soldier.last_name
          %td= soldier.first_name
          %td= soldier.aim/100
          %td= soldier.sight/100
          %td= soldier.stealth/100
          %td= soldier.speed/100
          %td= soldier.hardiness/100
          %td= soldier.leadership/100
          %td= soldier.average

.small_text_box
  %p
    Back to
    =link_to "#{@league.name}", league_path(@league.id)
